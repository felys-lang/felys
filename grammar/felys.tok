ADD: '+' ;
SUB: '-' ;
MUL: '*' ;
DIV: '/' ;
MOD: '%' ;
GE: '>=' ;
LE: '<=' ;
GT: '>' ;
LT: '<' ;
EQ: '==' ;
NE: '!=' ;

@(intern, memo, identifier)
IDENT: [a-zA-Z_][a-zA-Z0-9_]* ;

@(keyword) {
    OR: 'or' ;
    AND: 'and' ;
    NOT: 'not' ;
    TRUE: 'true';
    FALSE: 'false' ;
}

@(ws) {
    WS: [\u{20}\n\t\r]+ ;
    COMMENT: '//' [^\n]* ;
}
